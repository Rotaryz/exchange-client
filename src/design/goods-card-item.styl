$card-radius = 6px
@import "~@design"
.goods-item
  width: 50%
  padding-right: 5px
  padding-bottom: 5px
  box-sizing border-box
  .goods-item-wrap
    background-color $color-white
    border-radius $card-radius
    .goods-img
      display: flex
      width: px2vw(180)
      height: @width
      border-radius: $card-radius $card-radius 0 0
    .title
      font-family $font-family-medium
      font-size $font-size-14
      line-height 20px
      no-wrap()
      margin: 7px 10px 9px
      color: #2B2F37
      .icon-t
        display: inline-block
        font-family: $font-family-regular
        font-size: 11px
        color: #19B6B4
        height: 16px
        line-height: @height
        padding: 0 6px
        background: rgba(25, 182, 180, 0.06)
        border-1px(#19B6B4, @height)
        margin-right: 5px
        border-radius: @height
    .price-vip
      font-size $font-size-12
      color: $color-money
      font-family $font-family-din-bold
      padding: 0 10px
      line-height: 1
      display: flex
      .unit
        font-size: $font-size-12
        transform: translateY(2px)
      .price-num
        line-height: 1
        height: 15px
        font-size $font-size-15
        margin-right: 1px
      .vip-img
        transform: translateY(2px)
        width: 14px
        height: 13.5px
    .price-sale
      font-size $font-size-11
      color: $color-text-sub
      text-decoration-line line-through
      padding: 7px 10px 19px
    .exchange-wrapper
      padding-bottom: 20px
      margin 0 10px
      height: 19px
      position: relative
      .exc-icon
        position: absolute
        left: 0
        top: 0
        width: 44.5px
        height: 19px
        z-index: 2
      .number
        display: inline-block
        height: 19px
        padding: 0 8px 0 50px
        line-height: @height
        background: #C4F1F0
        border-radius: 0 2px 2px 0
        font-family: $font-family-din-bold
        font-size: 15px
        color: #2B2F37
        max-width: 25vw
        no-wrap()
